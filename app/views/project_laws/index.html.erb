<% @project_laws.each do |project_law| %>
  <h1>scrutin:</h1>
  <%= project_law.scrutin %>
  <h1>title:</h1>
  <%= project_law.name %>

  <% deputies_list = [] %>

  <% @votes.each do |vote| %>
    <% if vote.position == "contre" %>
      <% @deputies.each do |deputy| %>
        <% @political_groups.each do |political_group| %>
          <% if deputy.political_group_id == political_group.id %>
            <% if political_group.ref == "LREM"  %>
              <%= deputies_list << deputy %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
    <h1>Deputies from LREM</h1>
    <%= deputies_list.length() %>

    <h1>url:</h1>
    <%= project_law.url%>
    <h1>##########################################</h1>
  <% end %>
<% end %>
