<div class="retweet_container p-3">

  <div class="politician-info d-flex p-2">

    <div> <img class="avatar" alt="avatar" src=<%= tweet.retweet_avatar_https %> /></div>

    <div class="politician-info-add ml-2">
      <div class="politician-info-add-name">
        <%= tweet.retweet_username %>
      </div>
    </div>

  </div>

  <div class="tweet-content p-3 ">

    <div class="tweet-details-sub-container p-3">
      <%= tweet.retweet_content %>
    </div>

    <% if tweet.retweet_media == nil %>
      <div class="tweet-details-sub-container p-3">
    <!-- placeholder for picture/video -->
        <img class="tweet_picture" alt="" src=<%= tweet.retweet_photo %> />
      </div>
    <% else tweet.retweet_media? %>

      <div class="tweet-details-sub-container p-3">
      <!-- placeholder for picture/video -->
        <video controls width="450">
          <source type="video/mp4" src=<%= tweet.retweet_media%> >
          <source type="video/webm" src=<%= tweet.retweet_media%> >
          Sorry, your browser doesn't support embedded videos.
        </video>
      </div>
    <% end %>
    </div>
</div>
