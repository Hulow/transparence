<div class=" p-2 law-details align-items-center ">
 <!--  title and icon -->
  <div class= " align-items-center w-100 ">

    <div class="ml-1 law-text">
      Please pick the most relevant law from the list:
    </div>

    <div class="form-outline w-100">
      <%= form_for tweets_path, method: "post" do |f| %>
        <%= f.label "Please pick the most relevant law from the list:" %>
        <%= select_tag 'law_id', options_for_select(@project_laws.collect{ |u| [u.name, u.id] }), class: 'form-control m-3' %>
        <%= f.label "Which topic would you most closely associate the tweet with?" %>
        <%= select_tag 'policy_area_id', options_for_select(@policy_areas.collect{ |u| [u.category, u.id] }), class: 'form-control' %>
        <%= submit_tag "Validate", class: "btn btn-flat-green mr-3 far fa-check-circle"%>
      <% end %>
    </div>

  </div>

</div>


