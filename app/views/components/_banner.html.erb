
<div class="banner"style="background-image: linear-gradient(rgba(0,0,0,0.65),rgba(0,0,0,0.65)), url(https://images.unsplash.com/photo-1520500807606-4ac9ae633574?ixlib=rb-1.2.1&ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&auto=format&fit=crop&w=2850&q=80);">
  <%= render 'components/navbar_home'%>
  <div class="container-center-home">

    <div class="small-container text-align-center m-10">
      <h1>We fact check politicians </h1>
      <p class= "p-2 mt-2 font-weight-light">Compare what politicians tweet to how they actually vote in Parliament</p>
      <div class="d-flex justify-content-center">
        <div class="d-flex justify-content-center mr-2"><%= link_to "Explore", posts_path(@posts), class: 'btn-flat-red-home' %></div>
        <% if current_user %>
          <div class="d-flex justify-content-center ml-2"><%=link_to "Contribute", tweets_path, class: 'btn-flat-green-home' %></div>
        <% else %>
        <div class="d-flex justify-content-center ml-2"><%=link_to "Contribute", new_user_registration_path, class: 'btn-flat-green-home' %></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
